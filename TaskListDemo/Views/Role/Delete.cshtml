@model Role

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">刪除角色</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayNum" class="p-0"></label>
            <input asp-for="DisplayNum" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="RoleName" class="p-0"></label>
            <input asp-for="RoleName" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">刪除</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Role" asp-action="Index" class="btn btn-secondary border form-control">
                    返回
                </a>
            </div>
        </div>
    </div>
</form>