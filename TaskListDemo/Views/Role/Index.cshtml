@model List<Role>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">角色清單</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Role" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>新增角色
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>角色排序</th>
            <th>顯示排序</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayNum))
        {
            <tr>
                <td>@obj.DisplayNum</td>
                <td>@obj.RoleName</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>編輯
                        </a>
                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>刪除
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>