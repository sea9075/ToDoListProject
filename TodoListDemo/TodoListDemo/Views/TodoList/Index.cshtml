@model List<TodoList>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                代辦事項清單
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TodoList" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 新增代辦事項
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>標題</th>
                <th>描述</th>
                <th>狀態</th>
                <th>開始時間</th>
                <th>結束時間</th>
                <th>建立時間</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id))
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.Status</td>
                    <td>@obj.StartTime</td>
                    <td>@obj.EndTime</td>
                    <td>@obj.CreateTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>